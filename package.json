{
  "name": "go-off-work",
  "displayName": "下班倒计时助手",
  "description": "在状态栏显示距离下班还有多少时间，并在下班时间到达时提醒你的 VS Code 插件。",
  "version": "0.0.7",
  "publisher": "songzhanpeng",
  "icon": "icons/logo.png",
  "engines": {
    "vscode": "^1.81.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/songzhanpeng/go-off-work.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "setGoOffWorkTime",
        "title": "设置下班时间"
      },
      {
        "command": "setNotificationMessage",
        "title": "设置通知信息"
      },
      {
        "command": "setGetOffMessage",
        "title": "设置提示信息"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "GoOffWork",
      "properties": {
        "goOffWork.hour": {
          "scope": "window",
          "type": "number",
          "description": "设置下班的小时数",
          "default": 18
        },
        "goOffWork.minute": {
          "scope": "window",
          "type": "number",
          "description": "设置下班的分钟数",
          "default": 0
        },
        "goOffWork.role": {
          "scope": "window",
          "type": "string",
          "description": "设置角色",
          "default": ""
        },
        "goOffWork.notificationMessage": {
          "scope": "window",
          "type": "string",
          "description": "设置右下角通知信息",
          "default": "到点啦~ 该下班了!"
        },
        "goOffWork.getOffMessage": {
          "scope": "window",
          "type": "string",
          "description": "设置到时间提示信息",
          "default": "已经下班啦~ 赶紧滚回家去"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "clean": "rimraf node_modules",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "vitest",
    "patch": "npm version patch",
    "prepatch": "npm run lint"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.3",
    "vitest": "^0.34.2"
  }
}
